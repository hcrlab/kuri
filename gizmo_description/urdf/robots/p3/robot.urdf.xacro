<?xml version="1.0"?>
<robot name="p0q" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="accurate" default="true" />

  <!-- XXX: right now this file uses the 'gizmo' URDF elements.
            copy, edit, and reference them here when changes are necessary -->

  <xacro:include filename="$(find gizmo_description)/urdf/common_properties.urdf.xacro"/>
  <xacro:include filename="$(find gizmo_description)/urdf/sensors/2d_laser.urdf.xacro"/>
  <xacro:include filename="$(find gizmo_description)/urdf/materials.urdf.xacro" />
  <xacro:include filename="$(find gizmo_description)/urdf/sensors/upward_camera.urdf.xacro"/>

  <xacro:include filename="$(find gizmo_description)/urdf/robots/p3/gazebo.urdf.xacro">
    <xacro:arg name="accurate" value="$(arg accurate)"/>
  </xacro:include>

  <!-- NOTE(nickswalker5-9-21): Something about this base makes it immobile in Gazebo -->
  <!--xacro:include filename="$(find gizmo_description)/urdf/robots/p3/base.urdf.xacro" /-->
  <xacro:include filename="$(find gizmo_description)/urdf/robots/gizmo/base.urdf.xacro" />
  <xacro:include filename="$(find gizmo_description)/urdf/robots/gizmo/body.urdf.xacro"/>
  <xacro:include filename="$(find gizmo_description)/urdf/robots/gizmo/head.urdf.xacro"/>

  <xacro:property name="upward_cam_x_loc" value="0.076" />
  <xacro:property name="upward_cam_y_loc" value="0.0324" />
  <xacro:property name="upward_cam_z_loc" value="0.015" />
  <xacro:property name="upward_cam_r_ori" value="0" />
  <xacro:property name="upward_cam_p_ori" value="0" />
  <xacro:property name="upward_cam_y_ori" value="0" />

  <xacro:property name="mount_px" value="0.00022" />
  <xacro:property name="mount_py" value="0.0" />
  <xacro:property name="mount_pz" value="0.08510" />
  <xacro:property name="mount_or" value="${M_PI}" />
  <xacro:property name="mount_op" value="${M_PI}" />
  <xacro:property name="mount_oy" value="${M_PI}" />

  <!-- Depth sensor or Hokuyo -->
  <xacro:property name="laser_px" value="0.109" />
  <xacro:property name="laser_py" value="0.0" />
  <xacro:property name="laser_pz" value="0.175" />
  <xacro:property name="laser_or" value="0" />
  <xacro:property name="laser_op" value="0" />
  <xacro:property name="laser_oy" value="0" />

  <base/>
  <body />
  <head />
  <upward_camera   parent="head_2_link"/>
  <single_2D_laser parent="base_footprint"/>
</robot>
